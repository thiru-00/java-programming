import java.util.*;
class right
   { 
    public static void main(String args[])
    {
     int n;
     String s;
     System.out.print("enter the number of rows:");
     Scanner input = new Scanner(System.in);
     n =input.nextInt();
     System.out.print("enter the Symbol:");
     s=input.next();
           for (int i= 0; i<= n; i++)  
            {
                for (int j=0; j<=n-i; j++)  
                {  
                    System.out.print(" ");  
                }  
                for (int k=1;k<=i;k++)  
                {  
                    System.out.print(s);
                }   
                System.out.println();  
            }
        }
   }
